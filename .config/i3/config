assign [class="^jetbrains-pycharm-ce$"]4
assign [class="^Gedit$"]5

exec --no-startup-id i3-msg 'workspace 1; exec terminator -l iats'
exec --no-startup-id i3-msg 'workspace 1; exec terminator -l sandbox'

