path_exists VPN {
     # path exists when a VPN tunnel launched by nmcli/nm-applet is active
     path = "/proc/sys/net/ipv4/conf/tun0"
     format = "%status"
}

cpu_usage {
        format = "%usage"
}

memory {
        format = "%used"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

battery all {
        format = "%status %percentage"
        status_chr = "âš¡"
        status_bat = "ðŸ”‹"
        status_unk = ""
        status_full = "â˜»"
}

#tztime local {
#        format = "%Y-%m-%d %H:%M:%S"
#}
tztime local {
        format = "%d-%m %H:%M:%S"
}

load {
        format = "%1min"
}

disk "/" {
        format = "%avail"
}
