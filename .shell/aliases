#show aliases
alias a='echo "------------Your aliases------------";alias'

alias s='sudo '

#Opens a GUI text editor in the background. Can obviously be replaced with your favorite editor
alias text='gedit &'
#Same as above with super user privileges
alias sutext='gksudo gedit &'

alias untarz='tar -xzf'
alias untarj='tar -xjf'

# Mozio
alias mozio='cd ~/mozio/mozio;workon mozio'
alias ondemand='cd ~/mozio/ondemand;workon ondemand'
alias commons='cd ~/mozio/mozio-commons;workon mozio-commons'
alias ondemand_fix_settings='pycclean;rm ondemand/settings/active.py;ln -s dev.py ondemand/settings/active.py'
alias mozio_requirements='pip install --exists-action i -r requirements/dev.txt;python manage.py migrate;'

# Git
alias gui='git gui &'
alias git_my_branches='git branch | grep chinomng'
alias gitv='git log --graph --format="%C(auto)%h%d %s %C(black)%C(bold)%an, %cr"'
alias push='git push'
alias pull='git pull'
alias st='git status'
alias staging='git co staging;git pull'
alias backend-dev='git co backend-dev;git pull'
alias master='git co master;git pull'

# django
alias djrun='python manage.py runserver'
alias djshell='python manage.py shell'
alias djmigrate='python manage.py migrate'
alias djmakemigrations='python manage.py makemigrations'
alias djtest='python manage.py test'

alias youtube-dl='PYTHONPATH=$PYTHONPATH:/home/chinomng/Source/youtube-dl/ ~/Source/youtube-dl/bin/youtube-dl --restrict-filenames --retries 50 --continue'

alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

alias cp='cp -iv'

alias source_bashrc='source ~/.bashrc'

alias servethis="python -c 'import SimpleHTTPServer; SimpleHTTPServer.test()'"
alias servesmtp="python -m smtpd -n -c DebuggingServer localhost:1025"

alias battery='upower -i /org/freedesktop/UPower/devices/battery_BAT0'

alias pdbclean='find . -name "*.py" -exec sed -ri "/import ipdb;ipdb.set_trace()/d" {} \;'
alias ipdbclean='pdbclean'
alias pycclean='find . -name "*.pyc" -exec rm {} \;'

alias isort_staging='(git diff --name-only;git diff --name-only staging...) | grep .py |  xargs isort'
alias autopep8_staging='(git diff --name-only;git diff --name-only staging...) | grep .py |  xargs autopep8 --in-place --max-line-length 120 --ignore E501,E701,E702,E70,E125'
alias styles_staging='isort_staging;autopep8_staging'

alias isort_master='(git diff --name-only;git diff --name-only master...) | grep .py |  xargs isort'
alias autopep8_master='(git diff --name-only;git diff --name-only master...) | grep .py |  xargs autopep8 --in-place --max-line-length 120 --ignore E501,E701,E702,E70,E125'
alias styles_master='isort_master;autopep8_master'

# some ls aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

# Add an "alert" alias for long running commands.  Use like so:
#   sleep 10; alert
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'

# enable color supporof ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    #alias dir='dir --color=auto'
    #alias vdir='vdir --color=auto'

    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

alias e='emacsclient -n'
alias emacs='~/emacs-configuration/tryit.sh'
alias supdate='sudo apt-get update'
alias supgrade='sudo apt-get upgrade'

