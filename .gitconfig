[core]
editor = "nano"
excludesfile = /home/chinomng/.gitignore_global

[color]
diff = auto
ui = auto

[sendemail]
chainreplyto = false
from = Mariano Galan <chinomng@gmail.com>
smtpserver = smtp.gmail.com
smtpuser = chinomng@gmail.com
smtpserverport = 587
smtpencryption = tls
confirm = auto

[user]
name = Mariano Galan
email = chinomng@gmail.com

[pager]
#log = diff-highlight | less
#show = diff-highlight | less
#diff = diff-highlight | less

[color "diff"]
meta = yellow bold
frag = magenta bold
old = red bold
new = green bold
whitespace = red reverse

[alias]
# https://github.com/brandon-rhodes/homedir/blob/master/.gitconfig
ci = commit
amend = commit --amend
co = checkout
d = diff
l = log --graph --pretty=oneline --abbrev-commit --decorate=short
lp = log -p
ls = log --stat
st = status
locate = ls-tree --name-only -r HEAD
stash = stash save -u
delete = branch -D

[push]
default = simple

[merge]
tool = meld

[credential]
helper = cache
